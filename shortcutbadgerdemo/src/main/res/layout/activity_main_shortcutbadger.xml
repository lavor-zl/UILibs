    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lavor.shortcutbadgerdemo.MainActivity">

    <Button
        android:id="@+id/add"
        android:text="添加数字徽章"
